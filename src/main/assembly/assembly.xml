 <assembly>
    <id>distrib</id>
	<formats>
		<format>zip</format>
        <format>dir</format>
	</formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <lineEnding>dos</lineEnding>
            <directory>src/main/scripts</directory>
            <outputDirectory>xsd2saxparser/</outputDirectory>
            <filtered>false</filtered>
            <includes>
                <include>*.bat</include>
            </includes>
        </fileSet>
        <fileSet>
            <lineEnding>unix</lineEnding>
            <directory>src/main/resources/templates</directory>
            <outputDirectory>xsd2saxparser/templates</outputDirectory>
            <filtered>false</filtered>
            <includes>
                <include>*.vm</include>
            </includes>
        </fileSet>
        <fileSet>
            <lineEnding>unix</lineEnding>
            <directory>src/test/resources</directory>
            <outputDirectory>xsd2saxparser/samples</outputDirectory>
            <filtered>false</filtered>
            <includes>
                <include>*.xsd</include>
            </includes>
        </fileSet>
        <fileSet>
            <lineEnding>dos</lineEnding>
            <directory>src/test/resources</directory>
            <outputDirectory>xsd2saxparser/</outputDirectory>
            <filtered>false</filtered>
            <includes>
                <include>*.bat</include>
            </includes>
        </fileSet>
    </fileSets>
    
    <dependencySets>
        <dependencySet>
            <scope>runtime</scope>
            <outputDirectory>xsd2saxparser/lib</outputDirectory>
        </dependencySet>
    </dependencySets>
    
</assembly>
